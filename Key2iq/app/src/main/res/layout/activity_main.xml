<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5F4F6"
    tools:context=".MainActivity">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#fff"
        app:itemIconTint="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/navigation" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#fff"
        app:itemIconTint="#000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/nav_bottom" />


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:gauge="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What do you want to do..."
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="90dp"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Complete Now"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="120dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_marginTop="150dp"
                android:layout_marginLeft="42dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/tro"
                android:id="@+id/a">

            </ImageView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Meet new rappers"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/a"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="120dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/b"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="150dp"
                android:layout_toRightOf="@+id/a"
                android:background="@drawable/meet_new">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="42dp"
                android:layout_below="@+id/a"
                android:layout_marginTop="40dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_marginTop="75dp"
                android:layout_marginLeft="42dp"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_below="@+id/a"
                android:background="@drawable/explore"
                android:id="@+id/c">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play and Learn"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/a"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:layout_below="@id/b"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/d"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="75dp"
                android:layout_toRightOf="@+id/c"
                android:layout_below="@id/b"
                android:background="@drawable/play">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Learn Rap"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginLeft="42dp"
                android:layout_below="@+id/c"
                android:layout_marginTop="40dp"
                android:textStyle="bold"/>

             <ImageView
                 android:id="@+id/e"
                 android:layout_width="130dp"
                 android:layout_height="130dp"
                 android:layout_marginLeft="42dp"
                 android:layout_marginTop="75dp"
                 android:layout_below="@id/c"
                 android:background="@drawable/learn">
                 </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Practice Rap"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/a"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="40dp"
                android:layout_below="@id/d"
                android:textStyle="bold"/>


            <ImageView
                 android:id="@+id/f"
                 android:layout_width="130dp"
                 android:layout_height="130dp"
                 android:layout_marginLeft="60dp"
                 android:layout_marginTop="75dp"
                 android:layout_toRightOf="@+id/e"
                 android:layout_below="@id/d"
                 android:background="@drawable/practice">
                 </ImageView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="180dp"
                android:backgroundTint="#FBA72C"
                android:src="@android:drawable/ic_menu_edit"
               />
        </RelativeLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>